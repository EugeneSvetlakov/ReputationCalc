@model ReputationViewModel
@{
    ViewData["Title"] = "Home Reputation Calculator";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    @await Component.InvokeAsync("ReputationBlock")

    <div class="border border-dark p-2">
        <form asp-action="Index" method="post" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>Add Reputation</h3>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputPeasants">Peasants</label>
                    <input type="number" asp-for="Peasants" class="form-control"
                           placeholder="@nameof(Model.Peasants)">
                    <span asp-validation-for="Peasants" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputChurch">Church</label>
                    <input type="number" asp-for="Church" class="form-control"
                           placeholder="@nameof(Model.Church)">
                    <span asp-validation-for="Church" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputBandits">Bandits</label>
                    <input type="number" asp-for="Bandits" class="form-control"
                           placeholder="@nameof(Model.Bandits)">
                    <span asp-validation-for="Bandits" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputNobles">Nobles</label>
                    <input type="number" asp-for="Nobles" class="form-control"
                           placeholder="@nameof(Model.Nobles)">
                    <span asp-validation-for="Nobles" class="text-danger"></span>
                </div>
            </div>

            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Calculate">
        </form>
    </div>

</div>
