@model List<EnemyViewModel>

<div class="container">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Items</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enemy in Model)
            {
                <tr>
                    <th scope="row">@enemy.Id</th>
                    <td>
                        <a asp-action="GenerateItem" asp-route-id="@enemy.Id">
                            <span style="font-size: 2rem;"><i class="fas fa-dice"></i></span>
                        </a>
                        @enemy.Name
                    </td>
                    <td>
                        <ul class="list-group">
                            @foreach (var item in enemy.EnemyItems)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key.Id) @item.Key.Name
                                    <a asp-action="EditItemChance"
                                       asp-route-enemy="@enemy.Id"
                                       asp-route-item="@item.Key.Id">
                                        <i class="fas fa-pen-square"></i>
                                    </a>
                                    <a asp-action="DeleteItem"
                                       asp-route-enemy="@enemy.Id"
                                       asp-route-item="@item.Key.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                    Chance: <span class="badge badge-primary badge-pill">@item.Value</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-area=""
                                   asp-controller="Enemy"
                                   asp-action="AvailableItems"
                                   asp-route-enemy="@enemy.Id">
                                    <i class="fas fa-plus-square"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                    <td>
                        <a asp-area=""
                           asp-controller="Enemy"
                           asp-action="Edit"
                           asp-route-id="@enemy.Id">
                            <i class="fas fa-pen-square"></i>
                        </a>
                        <a asp-area=""
                           asp-controller="Enemy"
                           asp-action="Delete"
                           asp-route-id="@enemy.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>



</div>
