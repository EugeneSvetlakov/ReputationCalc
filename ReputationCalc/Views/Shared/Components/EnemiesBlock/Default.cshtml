@model EnemiesViewModel

<div class="container">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Items</th>
                <th scope="col">Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enemy in Model.Enemies)
            {
                <tr>
                    <th scope="row">@enemy.Id</th>
                    <td>@enemy.Name</td>
                    <td>
                        <ul class="list-group">
                            @foreach (var item in enemy.EnemyItems)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key.Id @item.Key.Name
                                    <i class="fas fa-trash-alt"></i>
                                    <span class="badge badge-primary badge-pill">@item.Value</span>

                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-area=""
                                   asp-controller="Enemy"
                                   asp-action="AddItems"
                                   asp-route-id="@enemy.Id">
                                    <i class="fas fa-plus-square"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                    <td>
                        <a asp-area=""
                           asp-controller="Enemy"
                           asp-action="Edit"
                           asp-route-id="@enemy.Id">
                            <i class="fas fa-pen-square"></i>
                        </a>
                        <a asp-area=""
                           asp-controller="Enemy"
                           asp-action="Delete"
                           asp-route-id="@enemy.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>



</div>
